<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="edu.spring.step1.Client">
        <constructor-arg value="12"/>
        <constructor-arg value="J.Smith"/>
    </bean>

    <bean id="eventLogger" class="edu.spring.step1.ConsoleEventLogger"/>
    <bean id="app" class="edu.spring.step1.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="edu.spring.step1.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
    </bean>

</beans>